[push]
adefault = simple
[core]
	editor = vim
	excludesfile = ~/.gitignore
[user]
	name = sun
	email = shun.nishitsuji@pepabo.com
[alias]
  pl = pull
  ci = commit
  ca = commit -a
  ad = add
  aa = add -A
  df = diff
  cia = commit --allow-empty
  co = checkout

  save = commit -m
  amend = commit --amend
  summary = status -u -s
  discard = checkout --
  back = checkout "-"
  bout = checkout -b
  unmerged = diff --name-only --diff-filter=U
  prestage = diff -w --word-diff=color
  precommit = diff --cached -w --word-diff=color --word-diff-regex='[^[:space:]<>]+'
  uncommit = reset --mixed HEAD~
  unstage = reset -q HEAD --
  last = log -1 HEAD --format=format:"%Cred%H"
  graph = log --graph -10 --branches --remotes --tags  --format=format:'%Cgreen%h %Creset• %<(75,trunc)%s (%cN, %ar) %Cred%d' --date-order
  history = log -20 --format=format:'%Cgreen%h %Creset• %s (%cN, %ar)'
  branches = branch -a
  stashes = stash list
  tags = tag
  remotes = remote -v
  move = mv
  remove = rm
  untrack = rm -r --cached
  unmerged = branch --no-merged
  unstash = stash pop
  what = show -w
  rewrite = rebase -i
  contributors = shortlog -s -n
  nevermind = !git reset --hard HEAD && git clean -d -f
  delete-merged-branch = "!f () { git checkout $1; git branch --merged|egrep -v '\\*|develop|master'|xargs git branch -d; };f"
